
  <%- include('./includes/head'); %>
  <%- include('./includes/nav'); %>

  <div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class=" text-center">Usuarios</h1>
            <p class="text-center lead">Todos usuarios estão abaixo</p>
          
            <div class="row">
            </div>

            <% if(usuarios.length > 0) { %>
            <div class="reponsive-table">
                <table class="table my-3">
                    <% usuarios.forEach(usuario => { %>
                        <tr>
                          <td><%= usuario.nome %></td>
                          <td><%= usuario.email %></td>
                          <td><%= usuario.idade %></td>
                          <td><a href="/cadastro/<%= usuario._id %>">Editar</a></td>
                          <td><a class="text-danger" href="/cadastro/delete/<%= usuario._id %>">Excluir</a></td>
                        </tr>
                        <% }); %>

                </table>
            </div>
            <% } else { %>
                <p class="text-center lead">Não existem usuarios</p>
              <% } %>

        </div>
    <div class="col-lg-2"></div>
    </div>
</div>


  <%- include('./includes/footer'); %>


