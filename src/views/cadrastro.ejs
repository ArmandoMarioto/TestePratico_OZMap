
  <%- include('./includes/head'); %>
  <%- include('./includes/nav'); %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
  
      <div class="col-lg-8 my-3">
  
        <div class="row">
  
          <div class="col-lg my-5">
            <% if(usuario._id) {%>
              <h4>Editar o Usuario</h4>
              <form class="form-cadastro" action="/cadastro/edit/<%= usuario._id%>" method="POST">
              <%} else {%>
                <h4>Criar um novo Usuario</h4>
                <form class="form-cadastro" action="/cadastro/register" method="POST">
                <%} %>
              <div class="form-group">
                <label>Seu Nome</label>
                <input value="<%= usuario.nome %>" type="text" class="form-control" name="nome">
              </div>
              <div class="form-group">
                <label>Seu e-mail</label>
                <input value="<%= usuario.email %>" type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Sua idade</label>
                <input value="<%= usuario.idade %>" type="number" class="form-control" name="idade">
              </div>
              <% if(usuario._id) {%>
                <button type="submit" class="btn btn-primary">Editar</button>
                <%} else {%>
                  <button type="submit" class="btn btn-primary">Criar usuario</button>
                  <%} %>
              
            </form>
  
          </div>
  
          <div class="col-lg my-5">        
          </div>
  
        </div>
  
      </div>
  
      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include('./includes/footer'); %>


